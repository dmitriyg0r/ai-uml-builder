{
  "productName": "AI UML Builder",
  "version": "0.1.0",
  "identifier": "com.aiumlbuilder.desktop",
  "build": {
    "beforeDevCommand": "vite --port 3000",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AI UML Builder",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "frameworks": [],
      "exceptionDomain": ""
    }
  }
}